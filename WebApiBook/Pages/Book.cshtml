
@page 
@model WebApiBook.Pages.BookModel
@{
    ViewData["Title"] = "Books";
}

<form method="post">
    <input type="search" name="text" class="text" placeholder="Search here"/>
    <input type="submit" name="submit" class="submit" value="Search"/>
    

<div class="text-center">
    <br />
    <h3>Список книг</h3>
    <ol class="rounded">
    @foreach (var item in Model.Books)
    {
        <li><a href="SelectedBook/@item.Id">@item.Title</a></li>       
        <br />
    }
    </ol>
    <a href="AddBook"  >Add Book</a>  
    
</div>
</form>

