@page "{id}"

@model WebApiBook.Pages.SelectedBookModel
@{
    ViewData["Title"] = Model.Title;
}

<form method="post">
<div class="text-center" id="bookdiv">
    <ol class="rounded">
    <p>Назва: <input type="text" value=@Model.Title></p>
    <p>Автор: <input type="text" value=@Model.Author ></p>
    <p>Стиль: <input type="text" value=@Model.Style></p>
    <p>Видавництво:  <input type="text" value=@Model.Publisher ></p>
    <p>Рік публікації: <input type="text" value=@Model.PublishYear></p>
    <input type="submit" name="submit" class="submit" value="Save">
    </ol>
</div>
</form>
